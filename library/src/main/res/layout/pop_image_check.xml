<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="#444" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15sp" />

    <com.ruffian.library.RTextView
        android:id="@+id/rtv_back"
        android:layout_width="60dp"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="返回"
        android:textSize="15sp"
        app:background_normal="@color/transparency"
        app:background_pressed="#555"
        app:icon_direction="left"
        app:icon_height="14dp"
        app:icon_src_normal="@drawable/ic_back"
        app:icon_width="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:text_color_normal="@color/white" />

    <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="0/0"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>